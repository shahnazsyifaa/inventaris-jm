<%- include('partials/header', {title: title}) -%>

<body id="page-top">

  <!-- Page Wrapper -->
  <div id="wrapper">

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

      <!-- Main Content -->
      <div id="content" style="background-color: #F8F9FC;">

        <!-- Topbar -->
        <%- include('partials/topbar') -%>
        <!-- End of Topbar -->

        <!-- Begin Page Content -->
        <div class="container-fluid">

          <!-- Page Heading -->
          <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-0 text-gray-800"><b>Edit Data Bangunan</b></h1>
          </div>

          <!-- Content Row -->
          <div class="row mb-4 ml-1">
            <a href="/dataBangunan">
              <button type="button" class="btn btn-dark shadow-sm mr-2" style="background-color: #386EA1;">
                <i class="fas fa-fw fa-arrow-left"></i>
                Kembali ke data bangunan
              </button>
            </a>
          </div>
          <!-- end of row -->

          <!-- Table Data -->

          <div class="row" style="margin-bottom: 50px;">
            <div class="col-12">
              <div class="card m-b-20 shadow-sm">
                <div class="card-block p-3">
                  <div class="card-header mb-3">
                    <b>EDIT DATA</b>
                  </div>
                  <form form action="/dataBangunan/<%= barangJalan.nomor_bangunan %>/edit" method="post">
                    <div class="form-row">
                      <div class="form-group col-md-6">
                        <label for="nama_barang">Nama Barang</label>
                        <input type="text" class="form-control form-control-sm" id="nama_barang" name="nama_barang"
                          value="<%= barangJalan.nama_barang_jalan %>">
                      </div>
                      <div class="form-group col-md-6">
                        <label for="alamat">Sebutan/Alamat</label>
                        <input type="text" class="form-control form-control-sm" id="sebutan" name="sebutan"
                          value="<%= barangJalan.sebutan %>"> </div>
                    </div>
                    <div class="form-row">
                      <div class="form-group col-md-6">
                        <label for="kode_lokasi">Kode Lokasi</label>
                        <select id="kode_lokasi" name="kode_lokasi" class="form-control form-control-sm">
                          <% for (let i in lokasi) { %>
                          <option value="<%= lokasi[i].kode_lokasi %>"
                            <% if (lokasi[i].kode_lokasi === barangJalan.kode_lokasi){%> selected <% } %>>
                            <%= lokasi[i].kode_lokasi %> - <%= lokasi[i].unit_kerja %>
                          </option>
                          <% } %>
                        </select>
                      </div>
                      <div class="form-group col-md-6">
                        <label for="kode_barang">Kode Barang</label>
                        <select id="kode_barang" name="kode_barang" class="form-control form-control-sm">
                          <% for (let i in barang) { %>
                          <option value="<%= barang[i].kode_barang %>"
                            <% if (barang[i].kode_barang === barangJalan.kode_barang){%> selected <% } %>>
                            <%= barang[i].kode_barang %> -
                            <%= barang[i].nama_barang %></option>
                          <% } %>
                        </select>
                      </div>
                    </div>
                    <div class="form-row">
                      <div class="form-group col-md-6">
                        <label for="nomor_urut">Nomor Urut</label>
                        <input type="text" class="form-control form-control-sm" id="nomor_urut" name="nomor_urut"
                          placeholder="" value="<%= barangJalan.nomor_urut_barang_jalan %>">
                      </div>
                      <div class="form-group col-md-6">
                        <label for="no_inventaris">Nomor Inventaris</label>
                        <input type="text" class="form-control form-control-sm" id="no_inventaris" name="no_inventaris"
                          value="<%= barangJalan.nomor_inventaris_barang_jalan %> (diisi otomatis oleh sistem)  "
                          disabled>
                      </div>
                    </div>
                    <div class="form-row">
                      <div class="form-group col-md-6">
                        <label for="jumlah">Jumlah</label>
                        <input type="text" class="form-control form-control-sm" id="jumlah" name="jumlah" placeholder=""
                          value="<%= barangJalan.jumlah_barang_jalan %>"> </div>
                      <div class="form-group col-md-6">
                        <label for="luas_bangunan">Luas Bangunan</label>
                        <input type="text" class="form-control form-control-sm" id="luas_bangunan" name="luas_bangunan"
                          placeholder="" value="<%= barangJalan.luas_barang_jalan %>">
                      </div>
                    </div>
                    <div class="form-row">
                      <div class="form-group col-md-6">
                        <label for="dari">Dari</label>
                        <input type="text" class="form-control form-control-sm" id="dari" name="dari" placeholder=""
                          value="<%= barangJalan.dari_barang_jalan %>"> </div>
                      <div class="form-group col-md-6">
                        <label for="cara">Dengan Cara</label>
                        <input type="text" class="form-control form-control-sm" id="cara" name="cara" placeholder=""
                          value="<%= barangJalan.pengiriman_barang_jalan %>"> </div>
                    </div>
                    <div class="form-row">
                      <div class="form-group col-md-6">
                        <label for="nomor_dokumen">Nomor Dokumen</label>
                        <input type="text" class="form-control form-control-sm" id="nomor_dokumen" name="nomor_dokumen"
                          placeholder="" value="<%= barangJalan.dokumen_barang_jalan %>"> </div>
                      <div class="form-group col-md-6">
                        <label for="tanggal">Tanggal Dokumen</label>
                        <input type="text" class="form-control form-control-sm" id="tanggal" name="tanggal"
                          placeholder="" value="<%= barangJalan.tanggal_barang_jalan %>"> </div>
                    </div>
                    <div class="form-row">
                      <div class="form-group col-md-6">
                        <label for="harga_perolehan">Harga Perolehan</label>
                        <input type="text" class="form-control form-control-sm" id="harga_perolehan"
                          name="harga_perolehan" placeholder="" value="<%= barangJalan.harga_barang_jalan %>">
                      </div>
                      <div class="form-group col-md-6">
                        <label for="kode_kondisi">Kode Kondisi</label>
                        <select id="kode_kondisi" name="kode_kondisi" class="form-control form-control-sm">
                          <% for (let i in kondisi) { %>
                          <option value="<%= kondisi[i].kode_kondisi %>"
                            <% if (kondisi[i].kode_kondisi === barangJalan.kode_kondisi){%> selected <% } %>>
                            <%= kondisi[i].kode_kondisi %> -
                            <%= kondisi[i].kondisi %>
                          </option>
                          <% } %>
                        </select>
                      </div>
                    </div>
                    <div class="form-row">
                      <div class="form-group col-md-6">
                        <label for="keterangan">Keterangan</label>
                        <input type="text" class="form-control form-control-sm" id="keterangan" name="keterangan"
                          placeholder="" value="<%= barangJalan.keterangan_barang_jalan %>"> </div>
                    </div>
                    <div class="modal-footer">
                      <button type="submit" class="btn btn-primary">Ubah</button>
                    </div>
                  </form>
                </div>
                <!--end of card block-->
              </div>
              <!--end of card-->
            </div>
            <!--end of col-->
          </div>
          <!-- end row -->

          <!-- DATEPICKER -->
          <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
          <script src="/datetimepicker-master/jquery.datetimepicker.full.min.js"></script>
          <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
          <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>


          <script>
            $("#tanggal").datepicker({
              atimepicker: false,
              datepicker: true,
              dateFormat: "yy-mm-dd",
              language: 'id'
            });
          </script>

          <!-- End of Table -->

        </div>
        <!-- end of page content container-fluid -->

        <!-- Footer -->
        <%- include('partials/footer') -%>
        <!-- End of Footer -->

      </div>
      <!-- End of Main Content -->

      <!-- Scroll to Top Button-->
      <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
      </a>

      <!-- Logout Modal-->
      <%- include('modal/logout') -%>
      <!-- end logout -->

    </div>
    <!-- End of content Wrapper -->
  </div>
  <!-- end of page wrapper -->


  <!-- Bootstrap core JavaScript-->
  <script src="/vendor/jquery/jquery.min.js"></script>
  <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

  <!-- Core plugin JavaScript-->
  <script src="/vendor/jquery-easing/jquery.easing.min.js"></script>

  <!-- Custom scripts for all pages-->
  <script src="/js/sb-admin-2.min.js"></script>

  <!-- Page level plugins -->
  <script src="/vendor/chart.js/Chart.min.js"></script>

  <!-- Page level custom scripts -->
  <script src="/js/demo/chart-area-demo.js"></script>
  <script src="/js/demo/chart-pie-demo.js"></script>

</body>

</html>