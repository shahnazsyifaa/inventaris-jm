<script src="/datetimepicker-master/jquery.datetimepicker.full.min.js"></script>
<script src="https://code.jquery.com/jquery-1.12.4.js"></script>
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>


<script>
  $("#tanggal").datepicker({
    atimepicker: false,
    datepicker: true,
    dateFormat: "yy-mm-dd",
    language: 'id'
  });
</script>