<!-- Input Alat Kantor modal -->
<div class="modal fade bd-example-modal-lg" id="inputAK" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel"
  aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <!-- Modal Header -->
      <div class="modal-header">
        <h4 class="modal-title">Input Data Bangunan</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>
      <!-- Modal body -->
      <div class="modal-body">
        <!-- FORM INPUT -->
        <form action="/dataBangunan/create" method="POST">
          <div class="form-row">
            <div class="form-group col-md-6">
              <label for="nama_bangunan">Nama Bangunan</label>
              <input type="text" class="form-control form-control-sm" id="nama_bangunan" name="nama_bangunan">
            </div>
            <div class="form-group col-md-6">
              <label for="alamat">Sebutan/Alamat</label>
              <input type="text" class="form-control form-control-sm" id="alamat" name="alamat" placeholder=" ">
            </div>
          </div>
          <div class="form-row">
            <div class="form-group col-md-6">
              <label for="kode_lokasi">Kode Lokasi</label>
              <select id="kode_lokasi" name="kode_lokasi" class="form-control form-control-sm">
                <% for (let i in lokasi) { %>
                <option value="<%= lokasi[i].kode_lokasi %>">
                  <%= lokasi[i].kode_lokasi %> - <%= lokasi[i].unit_kerja %></option>
                <% } %>
              </select>
            </div>
            <div class="form-group col-md-6">
              <label for="kode_barang">Kode Barang</label>
              <select id="kode_barang" name="kode_barang" class="form-control form-control-sm">
                <% for (let i in barang) { %>
                <option value="<%= barang[i].kode_barang %>">
                  <%= barang[i].kode_barang %> - <%= barang[i].nama_barang %></option>
                <% } %>
              </select>
            </div>
          </div>
          <div class="form-row">
            <div class="form-group col-md-6">
              <label for="nomor_urut">Nomor Urut</label>
              <input type="text" class="form-control form-control-sm" id="nomor_urut" name="nomor_urut">
            </div>
            <div class="form-group col-md-6">
              <label for="nomor_inventaris">Nomor Inventaris</label>
              <input type="text" class="form-control form-control-sm" id="nomor_inventaris" name="nomor_inventaris"
                placeholder="Diisi otomatis oleh sistem" disabled>
            </div>
          </div>
          <div class="form-row">
            <div class="form-group col-md-6">
              <label for="jumlah">Jumlah</label>
              <input type="text" class="form-control form-control-sm" id="jumlah" name="jumlah" placeholder=" ">
            </div>
            <div class="form-group col-md-6">
              <label for="luas_bangunan">Luas Bangunan</label>
              <input type="text" class="form-control form-control-sm" id="luas_bangunan" name="luas_bangunan"
                placeholder=" ">
            </div>
          </div>
          <div class="form-row">
            <div class="form-group col-md-6">
              <label for="dari">Dari</label>
              <input type="text" class="form-control form-control-sm" id="dari" name="dari" placeholder=" ">
            </div>
            <div class="form-group col-md-6">
              <label for="cara">Dengan Cara</label>
              <input type="text" class="form-control form-control-sm" id="cara" name="cara" placeholder=" ">
            </div>
          </div>
          <div class="form-row">
            <div class="form-group col-md-6">
              <label for="nomor_dokumen">Nomor Dokumen</label>
              <input type="text" class="form-control form-control-sm" id="nomor_dokumen" name="nomor_dokumen"
                placeholder=" ">
            </div>
            <div class="form-group col-md-6">
              <label for="tanggal">Tanggal Dokumen</label>
              <input type="text" class="form-control form-control-sm" id="tanggal" name="tanggal">
            </div>
          </div>
          <div class="form-row">
            <div class="form-group col-md-6">
              <label for="harga_perolehan">Harga Perolehan</label>
              <input type="text" class="form-control form-control-sm" id="harga_perolehan" name="harga_perolehan"
                placeholder=" ">
            </div>
            <div class="form-group col-md-6">
              <label for="kode_kondisi">Kode Kondisi</label>
              <select id="kode_kondisi" name="kode_kondisi" class="form-control form-control-sm">
                <% for (let i in kondisi) { %>
                <option value="<%= kondisi[i].kode_kondisi %>">
                  <%= kondisi[i].kode_kondisi %> - <%= kondisi[i].kondisi %>
                </option>
                <% } %>
              </select>
            </div>
          </div>
          <div class="form-row">
            <div class="form-group col-md-6">
              <label for="keterangan">Keterangan</label>
              <input type="text" class="form-control form-control-sm" id="keterangan" name="keterangan" placeholder=" ">
            </div>
          </div>
          <!-- Modal footer -->
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Tutup</button>
            <button type="submit" class="btn btn-primary">Tambah</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
<!-- END OF MODAL INPUT ALAT KANTOR-->

